  },
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.d.ts",
    "doc",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/continuation-local-storage": "^3.2.1",
    "@types/debug": "0.0.30",
    "@types/mocha": "^2.2.48",
