    "@types/semver": "^5.5.0",
    "@types/shimmer": "^1.0.1",
    "@types/uuid": "^3.4.3",
    "gts": "^0.5.4",
    "mocha": "^5.0.4",
    "ncp": "^2.0.0",
    "ts-node": "^4.0.0",
    "typescript": "~2.6.1",
    "nyc": "11.6.0"
  },
  "dependencies": {
    "async_hooks": "^1.0.0",
    "continuation-local-storage": "^3.2.1",
